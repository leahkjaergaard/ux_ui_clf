---
import Layout from "../Layout.astro";
---

<Layout>
  <h1>NYHEDSBREV</h1>
  <p class="underoverskrift">Hold dig opdateret med vores nyhedsbrev</p>

  <div class="form-container">
    <form>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" />

      <label for="firstname">Fornavn</label>
      <input type="text" id="firstname" name="firstname" />

      <label for="lastname">Efternavn</label>
      <input type="text" id="lastname" name="lastname" />

      <label for="phone">Telefonnummer</label>
      <input type="tel" id="phone" name="phone" />

      <div class="checkboxes">
        <h2>Din relation</h2>
        <label for="guest"><input type="checkbox" id="guest" name="relation" value="guest" /> Gæst</label>
        <label for="artist1"><input type="checkbox" id="artist1" name="relation" value="artist" /> Kunstner</label>
        <label for="artist2"><input type="checkbox" id="artist2" name="relation" value="artist" /> Vært</label>
      </div>

      <div class="newsletter-container">
        <input type="checkbox" id="newsletter" name="newsletter" />
        <label for="newsletter">Ja, jeg vil gerne modtage mails med nyheder og markedsføringsrelateret indhold fra Copenhagen Light Festivals aktiviteter.</label>
      </div>

      <button type="submit">TILMELD</button>
    </form>
  </div>
</Layout>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto 4rem;
    font-family: "Jaldi", sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  form {
    display: flex;
    flex-direction: column;
  }

  input {
    margin-bottom: 1rem;
    padding: 14px;
    border: 1px solid #4c97c6;
    background-color: transparent;
    color: white;
  }

  .checkboxes {
    display: flex;
    flex-direction: column;
  }

  .checkboxes label {
    margin-bottom: 5px;
  }

  .checkboxes input[type="checkbox"] {
    margin-right: 10px;
  }

  .newsletter-container {
    display: flex;
    align-items: center;
  }

  button {
    margin-top: 1rem;
    padding: 10px;
    border: none;
    border-radius: 4px;
    border: 1px solid #4c97c6;
    background-color: transparent;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #4c97c6;
  }
</style>
